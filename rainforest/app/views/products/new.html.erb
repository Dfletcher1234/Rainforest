<h1>New Product</h1>

<%= form_for @product do |f| %>
<p><%= f.label :name %></p>
<p><%= f.text_field :name %></p>

<p><%= f.label :description %></p>
<p><%= f.text_area :description %></p>

<p><%= f.label :price_in_cents %></p>
<p><%= f.text_field :price_in_cents %></p>
<p><%= f.submit "SUBMIT" %></p>
<% end %>
