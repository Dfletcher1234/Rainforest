<h1>Product Show Page</h1>
<p><%= @product.name %></p>
<p><%= @product.description %></p>
<p><%= @product.price_in_dollars %></p>

<%= link_to "Edit", edit_product_path(@product)%> |
<%= link_to "Delete", product_path(@product), method: :delete, data: {confirm: "Hmmmmmmm, are you certain?"} %>
<hr>
<% if !@product.reviews.empty? %>
  <% @product.reviews.each do |review| %>
    <% if review.persisted? %>
      <%= review.comment %> <br>
      <% p review %>
      <%= review.created_at %>
      <%= link_to "Edit", edit_product_review_path(product_id:@product.id, id:review.id)%> <hr>
    <% end %>
  <% end %>


<% end %>

<h4>New Review</h4>

<%= render "reviews/form.html.erb" %>
